
page {
	width: 100%;
	height: 100%;
}
.contain {
	width: 100%;
	height: 100%;
	background: #F8F8F8;
}
.lists {
	width: 100%;
	padding: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.list {
	width: 100%;
	padding: 20rpx;
	background: #fff;
	border-radius: 4px;
}
.head {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	font-size: 14px;
	color: #333;
	border-bottom: 1px solid #eee;
	padding: 20rpx 0;
}
.head>._img {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}
.head>input {
	text-align: right;
	margin-right: 34rpx;
}
.right {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.right>._img {
	width: 24rpx;
}
.right>input {
	text-align: right;
	margin-right: 12rpx;
}
.submit {
	width: 90%;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	border-radius: 4px;
	background: #DE2910;
	font-size: 15px;
	color: #fff;
	margin: 30rpx auto;
}

