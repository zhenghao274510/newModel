	height: 260rpx;
	padding: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.reason>._p {
	width: 100%;
	margin-top: 30rpx;
}
.reason_content {
	width: 100%;
	height: 100%;
	border: 1px solid #eee;
	border-radius: 4px;
}
.reason_content>textarea {
	width: 100%;
	height: 100%;
	border: none;
	size: none;
	padding: 16rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 14px;
	color: #333;
}
.tip {
	width: 100%;
	padding: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 12px;
}
.card_btn {
	width: 90%;
	border-radius: 4px;
	border: 1px solid #eee;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
